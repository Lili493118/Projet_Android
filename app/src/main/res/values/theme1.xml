<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.theme1" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkgreen</item>
        <item name="colorPrimaryVariant">@color/lightgreen</item>
        <item name="colorOnPrimary">@color/lightbeige</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mediumbeige</item>
        <item name="colorSecondaryVariant">@color/darkbeige</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--Pour les preference -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>
</resources>